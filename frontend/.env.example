# AI-CodeReview Frontend Environment Variables
# Copy this file to .env and update with your actual values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL - where the FastAPI server is running
# Development: http://localhost:8000/api/v1
# Production: https://your-api-domain.com/api/v1
REACT_APP_API_URL=http://localhost:8000/api/v1

# API timeout in milliseconds (default: 30 seconds)
REACT_APP_API_TIMEOUT=30000

# =============================================================================
# GitHub Integration (Optional)
# =============================================================================

# GitHub OAuth App Client ID for user authentication
# Only needed if implementing GitHub OAuth login
REACT_APP_GITHUB_CLIENT_ID=your_github_client_id_here

# GitHub App Installation ID for repository access
# Only needed for GitHub App integration
REACT_APP_GITHUB_INSTALLATION_ID=your_installation_id

# =============================================================================
# Application Configuration
# =============================================================================

# Application environment (development, staging, production)
REACT_APP_ENVIRONMENT=development

# Application version (automatically set by build process)
REACT_APP_VERSION=1.0.0

# Enable debug mode for additional logging
REACT_APP_DEBUG=true

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable specific features for gradual rollout
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_REPOSITORY_MANAGEMENT=true

# =============================================================================
# Analytics and Monitoring (Optional)
# =============================================================================

# Google Analytics tracking ID
REACT_APP_GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry DSN for error tracking
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# UI Configuration
# =============================================================================

# Default theme (light, dark, auto)
REACT_APP_DEFAULT_THEME=light

# Maximum file size for code analysis (in bytes)
REACT_APP_MAX_FILE_SIZE=1048576

# Maximum number of files for bulk analysis
REACT_APP_MAX_BULK_FILES=10

# Auto-refresh interval for dashboard data (in milliseconds)
REACT_APP_REFRESH_INTERVAL=30000

# =============================================================================
# Development Settings
# =============================================================================

# Enable React Developer Tools in production (not recommended)
REACT_APP_ENABLE_DEVTOOLS=false

# Mock API responses for development without backend
REACT_APP_MOCK_API=false

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# Security Settings
# =============================================================================

# Content Security Policy nonce (generated by server)
REACT_APP_CSP_NONCE=

# Enable strict HTTPS in production
REACT_APP_FORCE_HTTPS=false

# =============================================================================
# Deployment Configuration
# =============================================================================

# Public URL for the application (used for routing)
PUBLIC_URL=/

# Build output directory
BUILD_PATH=build

# Source map generation (true, false, or 'hidden')
GENERATE_SOURCEMAP=true

# Bundle analyzer (set to true to analyze bundle size)
ANALYZE_BUNDLE=false

# =============================================================================
# Example Values for Different Environments
# =============================================================================

# Development
# REACT_APP_API_URL=http://localhost:8000/api/v1
# REACT_APP_DEBUG=true

# Staging  
# REACT_APP_API_URL=https://staging-api.ai-codereview.com/api/v1
# REACT_APP_DEBUG=false

# Production
# REACT_APP_API_URL=https://api.ai-codereview.com/api/v1
# REACT_APP_DEBUG=false
# REACT_APP_FORCE_HTTPS=true